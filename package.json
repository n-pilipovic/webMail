{
  "name": "webmail",
  "version": "1.0.0",
  "description": "Web Mail Client written in Angular 2.0 and TypeScript, with NodeJS and Express",
  "main": "index.js",
  "scripts": {
    "tsc": "tsc -p webMailApp -w",
    "api": "cd middleware && npm install && node server.js",
    "client": "live-server --open=webMailApp",
    "appStart": "node server.js",
    "start": "concurrent \"npm run tsc\" \"npm run appStart\" "
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/n-pilipovic/webMail.git"
  },
  "keywords": [
    "webmail",
    "angular",
    "2.0",
    "typescript"
  ],
  "author": "Novica Pilipovic",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/n-pilipovic/webMail/issues"
  },
  "homepage": "https://github.com/n-pilipovic/webMail#readme",
  "dependencies": {
    "angular2": "2.0.0-beta.0",
    "bootstrap": "^3.3.6",
    "es6-promise": "^3.0.2",
    "es6-shim": "^0.33.3",
    "express": "^4.13.3",
    "jquery": "^2.1.4",
    "reflect-metadata": "0.1.2",
    "rxjs": "5.0.0-beta.0",
    "systemjs": "0.19.6",
    "zone.js": "0.5.10"
  },
  "devDependencies": {
    "live-server": "^0.9.0",
    "concurrently": "^1.0.0",
    "typescript": "^1.7.3"
